<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NEW.NewChooseScreen">


    <androidx.cardview.widget.CardView
        android:id="@+id/new_patientCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="#4584AA"
        app:cardCornerRadius="40dp"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="597dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteY="13dp">

            <TextView
                android:id="@+id/new_textView3"
                android:layout_width="261dp"
                android:layout_height="88dp"
                android:layout_marginTop="71dp"
                android:gravity="center"
                android:text="Click Here To Join US"
                android:textColor="@color/white"
                android:textSize="40sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.606"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/new_imageView3"
                app:layout_constraintVertical_bias="0.0" />

            <ImageView
                android:id="@+id/new_imageView3"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_marginStart="91dp"
                android:layout_marginTop="186dp"
                android:layout_marginEnd="81dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/patients" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>